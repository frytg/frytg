{
  "scripts": {
    "clean": "rm -rf public && rm -rf assets/css/compiled",
    "hugo:local": "hugo server",
    "hugo:build": "hugo --minify",
    "vite:build": "vite build && cp -r static/compiled assets/css",
    "tailwind:local": "yarn tailwind:build --watch",
    "tailwind:build": "npx tailwindcss -i ./assets/css/main.scss -o ./assets/css/main-tailwind-compiled.css",
    "build:prod": "yarn clean && yarn vite:build && yarn hugo:build && yarn tailwind:build",
    "outdated": "yarn upgrade-interactive"
  },
  "packageManager": "yarn@4.1.0",
  "prettier": "@vercel/style-guide/prettier",
  "devDependencies": {
    "@vercel/style-guide": "6.0.0",
    "eslint": "8.57.0",
    "inter-ui": "^4.0.2",
    "prettier": "3.2.5",
    "sass": "^1.72.0",
    "tailwindcss": "3.4.1",
    "vite": "^5.1.6"
  }
}
